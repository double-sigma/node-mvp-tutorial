extends layout

block content
  h1= title
  p Welcome to #{title}
  form(action="/", method="POST")
    input(name="lead_email", type="email", placeholder="Enter email")
    button(type="submit") Submit
  if leads
    h1 Leads
    for lead in leads
      div
        p(id=lead.id)
          span #{lead.email}
          | 
          a(href="/lead/" + lead.id) Details
          | 
          a(href="/lead/" + lead.id + "/edit") Edit
          | 
          button(onclick=`deleteLead('${lead.id}')`) Delete Ajax
          //- | 
          //- form(action="/lead/" + lead.id + "/delete" , method="POST")
          //-   button(type="submit") Delete
  script(src='https://code.jquery.com/jquery-3.2.1.min.js')
  script(src='/javascripts/leads.js')
