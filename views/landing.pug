doctype html
html(lang='en')
  include common/head.pug
  +head("Starter MVP")
  body
    header
    h1= title
    p Welcome to #{title}
    form(action="/", method="POST")
      input(name="lead_email", type="email", placeholder="Enter email")
      button(type="submit") Submit
    if leads
      h1 Leads
      for lead in leads
        div
          p(id=lead.id)
            span #{lead.email}
            | 
            a(href="/lead/" + lead.id) Details
            | 
            a(href="/lead/" + lead.id + "/edit") Edit
            | 
            button(onclick=`deleteLead('${lead.id}')`) Delete Ajax
            //- | 
            //- form(action="/lead/" + lead.id + "/delete" , method="POST")
            //-   button(type="submit") Delete
    include common/footer.pug
    +footer()
    script(src='/javascripts/leads.js')
  